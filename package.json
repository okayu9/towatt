{
  "name": "towatt",
  "version": "0.1.0",
  "description": "Microwave heating time converter",
  "scripts": {
    "clean": "rm -rf build dist",
    "build:bundle": "node scripts/build-app.mjs",
    "build": "npm run clean && npm run build:bundle",
    "inline-css": "node scripts/inline-css.mjs",
    "bundle-html": "node scripts/bundle-html.mjs",
    "dist": "npm run build && npm run inline-css && npm run bundle-html",
    "e2e:webserver": "npm run dist && node scripts/serve-dist.mjs",
    "playwright:install": "playwright install",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "TS_NODE_PROJECT=tsconfig.playwright.json playwright test"
  },
  "license": "ISC",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/esbuild-plugin": "^2.3.18",
    "@vitest/coverage-v8": "^3.2.4",
    "esbuild": "^0.25.11",
    "happy-dom": "^20.0.5",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
